<section class="login-section">
  <h1 class="login-header">Login</h1>
  <section class="login-form">
    <form action="<%= sessions_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <sl-input class="username" label="UserName" name="user[username]"></sl-input>
      <sl-input type="password" class="password" label="Password" name="user[password]"></sl-input>
      <section class="sign-up-buttons">
        <a href="<%= new_user_path %>">
          <sl-button variant="primary"  class="btn-signup" type="submit">Back</sl-button>
        </a>
        <sl-button variant="primary" type="submit" class="btn-login">LogIn</sl-button>
      </section>
    </form>
  </section>
</section>

